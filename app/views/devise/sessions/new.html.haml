%h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %ul.form
    %li
      = f.label :email
    %br
      = f.email_field :email
    %li
      = f.label :password
    %br
      = f.password_field :password

    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me
    %li
      = f.submit "Sign in"

= render "links"